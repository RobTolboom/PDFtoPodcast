{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Classification Schema",
  "description": "Schema for publication type classification and metadata extraction",
  "type": "object",
  "required": ["metadata", "publication_type", "classification_confidence"],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["title", "journal", "vancouver_citation"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "description": "Full title of the publication"
        },
        "journal": {
          "type": "string",
          "description": "Full journal name"
        },
        "journal_abbrev": {
          "type": "string",
          "description": "Abbreviated journal name"
        },
        "published_date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Publication date in YYYY-MM-DD format"
        },
        "volume": {
          "type": "string",
          "description": "Volume number"
        },
        "issue": {
          "type": "string",
          "description": "Issue number"
        },
        "pages": {
          "type": "string",
          "description": "Page range (e.g., 123-145)"
        },
        "doi": {
          "type": "string",
          "description": "Digital Object Identifier"
        },
        "pmid": {
          "type": "string",
          "description": "PubMed ID"
        },
        "authors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["family_name"],
            "additionalProperties": false,
            "properties": {
              "given_name": {
                "type": "string"
              },
              "family_name": {
                "type": "string"
              },
              "initials": {
                "type": "string"
              },
              "orcid": {
                "type": "string"
              }
            }
          }
        },
        "vancouver_citation": {
          "type": "string",
          "description": "Full Vancouver-style citation"
        },
        "source": {
          "type": "object",
          "required": ["page"],
          "additionalProperties": false,
          "properties": {
            "page": {
              "type": "number"
            },
            "anchor": {
              "type": "string",
              "description": "Location description in PDF"
            }
          }
        }
      }
    },
    "publication_type": {
      "type": "string",
      "enum": [
        "interventional_trial",
        "observational_analytic",
        "evidence_synthesis",
        "prediction_prognosis",
        "editorials_opinion",
        "overig"
      ],
      "description": "Primary classification of publication type"
    },
    "classification_confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score for the classification"
    },
    "classification_reasoning": {
      "type": "string",
      "description": "Explanation of classification decision and key indicators"
    },
    "alternative_classifications": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "interventional_trial",
          "observational_analytic",
          "evidence_synthesis",
          "prediction_prognosis",
          "editorials_opinion",
          "overig"
        ]
      },
      "description": "Other possible classification types if confidence < 0.9"
    },
    "extraction_warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["warning"],
        "additionalProperties": false,
        "properties": {
          "warning": {
            "type": "string",
            "description": "Description of uncertainty or ambiguity"
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "page": {
                "type": "number"
              },
              "anchor": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
