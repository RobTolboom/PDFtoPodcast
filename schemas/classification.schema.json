{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Classification Schema",
  "description": "Schema for publication type classification and metadata extraction",
  "type": "object",
  "required": ["metadata", "publication_type", "classification_confidence", "classification_reasoning", "alternative_classifications", "extraction_warnings"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["title", "journal", "journal_abbrev", "published_date", "volume", "issue", "pages", "doi", "pmid", "authors", "vancouver_citation", "source"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Full title of the publication"
        },
        "journal": {
          "type": "string",
          "description": "Full journal name"
        },
        "journal_abbrev": {
          "type": ["string", "null"],
          "description": "Abbreviated journal name"
        },
        "published_date": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Publication date in YYYY-MM-DD format"
        },
        "volume": {
          "type": ["string", "null"],
          "description": "Volume number"
        },
        "issue": {
          "type": ["string", "null"],
          "description": "Issue number"
        },
        "pages": {
          "type": ["string", "null"],
          "description": "Page range (e.g., 123-145)"
        },
        "doi": {
          "type": ["string", "null"],
          "description": "Digital Object Identifier"
        },
        "pmid": {
          "type": ["string", "null"],
          "description": "PubMed ID"
        },
        "authors": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "required": ["given_name", "family_name", "initials", "orcid"],
            "properties": {
              "given_name": {
                "type": ["string", "null"]
              },
              "family_name": {
                "type": "string"
              },
              "initials": {
                "type": ["string", "null"]
              },
              "orcid": {
                "type": ["string", "null"]
              }
            },
            "additionalProperties": false
          }
        },
        "vancouver_citation": {
          "type": "string",
          "description": "Full Vancouver-style citation"
        },
        "source": {
          "type": ["object", "null"],
          "required": ["page", "anchor"],
          "properties": {
            "page": {
              "type": "number"
            },
            "anchor": {
              "type": ["string", "null"],
              "description": "Location description in PDF"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "publication_type": {
      "type": "string",
      "enum": [
        "interventional_trial",
        "observational_analytic",
        "evidence_synthesis",
        "prediction_prognosis",
        "editorials_opinion",
        "overig"
      ],
      "description": "Primary classification of publication type"
    },
    "classification_confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "Confidence score for the classification"
    },
    "classification_reasoning": {
      "type": ["string", "null"],
      "description": "Explanation of classification decision and key indicators"
    },
    "alternative_classifications": {
      "type": ["array", "null"],
      "items": {
        "type": "string",
        "enum": [
          "interventional_trial",
          "observational_analytic",
          "evidence_synthesis",
          "prediction_prognosis",
          "editorials_opinion",
          "overig"
        ]
      },
      "description": "Other possible classification types if confidence < 0.9"
    },
    "extraction_warnings": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "required": ["warning", "source"],
        "properties": {
          "warning": {
            "type": "string",
            "description": "Description of uncertainty or ambiguity"
          },
          "source": {
            "type": ["object", "null"],
            "required": ["page", "anchor"],
            "properties": {
              "page": {
                "type": ["number", "null"]
              },
              "anchor": {
                "type": ["string", "null"]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
